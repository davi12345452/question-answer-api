generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Question {
  id         String       @unique @default(uuid())
  name       String       @default("Anonymous")
  content    String
  Answers    Answer[]

  @@map("question")
}

model Answer {
  id              String       @unique @default(uuid())
  name            String       @default("Anonymous")
  content         String
  question_id     String      @unique
  Question        Question    @relation(fields: [question_id], references: [id])

  @@map("answer")
}
